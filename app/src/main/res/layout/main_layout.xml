<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    tools:context="com.example.atelierjava.MainActivity">

    <Button
        android:id="@+id/goToServerActivityButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="215dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#E1B5CA"
        android:onClick="goToServer"
        android:text="Server Device" />

    <Button
        android:id="@+id/goToClientActivityButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#E1B5CA"
        android:onClick="goToClient"
        android:text="Client Device" />

</LinearLayout>